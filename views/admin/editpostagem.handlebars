{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Edição de postagem</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" required value="{{postagem.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required value="{{postagem.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-control">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success" type="submit">Salvar alterações</button>


        </form>
    </div>
</div>