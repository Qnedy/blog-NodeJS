<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Adicionar nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Descrição: {{descricao}}</small><br>
            <small>Conteúdo: {{conteudo}}</small><br>
            <small>Categoria: {{categoria.nome}}</small> <Br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar postagem</button></a>
        </div>
    </div>

{{else}}
    <h4 class="mt-4">Nenhuma postagem registrada!</h4>

{{/each}}